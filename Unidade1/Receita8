<body>
   <button id="botaoCarregar">Carregar Cervejas</button>
   <div id="cervejasDiv">Clique no botão acima para carregar as cervejas.</div>

   <script>
      const carregarDiv = (cs) => {
         const div = document.getElementById("cervejasDiv");

         // Mapear cada cerveja em um "card"
         const itensHtml = cs.map(({ name, alcohol, style, hop, yeast, malts, ibu }) => `
            <div class="cerveja-card">
               <h2>${name}</h2>
               <p><strong>Estilo:</strong> ${style}</p>
               <p><strong>Álcool:</strong> ${alcohol}</p>
               <p><strong>Lúpulo:</strong> ${hop}</p>
               <p><strong>Fermento:</strong> ${yeast}</p>
               <p><strong>Malte:</strong> ${malts}</p>
               <p><strong>IBU:</strong> ${ibu}</p>
            </div>
         `);

         div.innerHTML = itensHtml.join("\n");
      };

      const carregarCervejas2 = () => {
         const div = document.getElementById("cervejasDiv");

         div.innerHTML = `<p>Fazendo requisição...</p>`;

         fetch("https://random-data-api.com/api/v2/beers?size=3")
            .then((res) => {
               if (!res.ok) throw new Error("Erro na requisição!");
               return res.json();
            })
            .then((json) => {
               carregarDiv(json);
            })
            .catch((err) => {
               div.innerHTML = `<p style="color: red;">Erro ao carregar os dados: ${err.message}</p>`;
            });
      };

      document.getElementById("botaoCarregar").addEventListener("click", carregarCervejas2);
   </script>
</body>
</html>
