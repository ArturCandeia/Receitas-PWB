<!DOCTYPE html>
<html>   

   <head>
      <meta charset="UTF-8">      
      <style>
         body {
            font-family: Arial, sans-serif;
         }

         #cervejasDiv table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
         }

         #cervejasDiv th, #cervejasDiv td {
            border: 2px solid #003366;
            padding: 10px;
            text-align: center;
            font-size: 18px;
         }

         #cervejasDiv th {
            background-color: #003366;
            color: #ffffff;
         }

         #cervejasDiv td {
            background-color: #f2f2f2;
            color: #000000;
         }
      </style>
   </head>

   <body>
      <div>
         <button id="botaoCarregar">Carregar cervejas...</button>
      </div>

      <div id="cervejasDiv"></div>            
   </body> 

   <script>
      const cervejas = [
         {
            name: "Guiness", 
            alcohol: "10%",
            style: "Imperial Stout",
            ibu: "45"           
         }, 
         {
            name: "Desperados",
            alcohol: "6%",
            style: "Lager",
            ibu: "15"              
         }, 
         {
            name: "Becks",
            alcohol: "5%",
            style: "Pilsen",
            ibu: "20"             
         }
      ];

      const carregarDiv = (cs, divId = "cervejasDiv", headers = ["Nome", "Ãlcool", "Estilo", "Amargor"], properties = ["name", "alcohol", "style", "ibu"]) => {
         const div = document.getElementById(divId);
         const header = `<table><tr>${headers.map(header => `<th>${header}</th>`).join("")}</tr>`;
         const itensHtml = cs.map(item => 
            `<tr>
               ${properties.map(prop => `<td>${item[prop] || "N/A"}</td>`).join("")}
            </tr>`
         ); 
         const footer = `</table>`;
         div.innerHTML = `${header}${itensHtml.join("\n")}${footer}`;
      };

      const botao = document.getElementById("botaoCarregar");
      botao.addEventListener("click", () => carregarDiv(cervejas));                 
   </script>

</html>

