<!DOCTYPE html>
<html>   

   <head>
      <meta charset="UTF-8">      
      <style>
         body {
            font-family: Arial, sans-serif;
         }

         #cervejasDiv table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
         }

         #cervejasDiv th, #cervejasDiv td {
            border: 2px solid #003366; 
            padding: 10px;
            text-align: center;
            font-size: 18px;
         }

         #cervejasDiv th {
            background-color: #003366;
            color: #ffffff;
         }

         #cervejasDiv td {
            background-color: #f2f2f2;
            color: #000000;
         }
      </style>
   </head>

   <body>
      <div>
         <button id="botaoCarregar">Carregar cervejas...</button>
      </div>

      <div id="cervejasDiv"></div>            
   </body> 

   <script>
      const cervejas = [
         {
            name: "Guiness", 
            alcohol: "10%"            
         }, 
         {
            name: "Desperados",
            alcohol: "6%"             
         }, 
         {
            name: "Becks",
            alcohol: "5%"             
         }
      ];

      const carregarDiv = cs => {
         const div = document.getElementById("cervejasDiv");
         const header = `<table><tr><th>Nome</th><th>√Ålcool</th></tr>`;
         const itensHtml = cs.map(item => `<tr><td>${item.name}</td><td>${item.alcohol}</td></tr>`); 
         const footer = `</table>`;
         div.innerHTML = `${header}${itensHtml.join("\n")}${footer}`;
      };

      const botao = document.getElementById("botaoCarregar");
      botao.addEventListener("click", () => carregarDiv(cervejas));                 
   </script>

</html>

