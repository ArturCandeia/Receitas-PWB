<!DOCTYPE html>
<html>   

   <head>
      <meta charset="UTF-8">      
      <style>
         #meu_amor table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
         }

         #meu_amor th, #meu_amor td {
            border: 2px solid #003366; 
            padding: 10px;
            text-align: center;
            font-family: Arial, sans-serif;
            font-size: 18px;
         }

         #meu_amor th {
            background-color: #003366; 
            color: #000000; 
         }

         #meu_amor td {
            background-color: #336699; 
            color: #000000; 
         }

         a {
            background-color: #003366; 
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            margin: 5px;
            display: inline-block; 
         }

         a:hover {
            background-color: #005599; 
         }
      </style>
   </head>

   <body>
      <div>
         <a href="#" id="linkCarregar">Carregar jogos...</a>
         <a href="#" id="linkOrdenar">Mostrar jogos ordenados</a>
         <a href="#" id="linkEmbaralhar">Embaralhar jogos</a>
      </div>
      <div id="meu_amor"></div>            
   </body>   

   <script>
      let jogos = ["Terraria", "Hollow Knight", "Enter the Gungeon"];
      
      const carregarDiv = (jogos) => {
         const div = document.getElementById("meu_amor");
         const header = `<table><tr><th>Jogos</th></tr>`;
         const jogosHtml = jogos.map(item => `<tr><td>${item}</td></tr>`); 
         const footer = `</table>`;
         div.innerHTML = `${header}${jogosHtml.join("\n")}${footer}`;
      }

      const carregarDivOrdenada = () => {
         const div = document.getElementById("meu_amor");
         const jogosOrdenados = [...jogos].sort();
         const header = `<h2>Jogos Ordenados</h2><table><tr><th>Jogos</th></tr>`;
         const jogosHtml = jogosOrdenados.map(item => `<tr><td>${item}</td></tr>`);
         const footer = `</table>`;
         div.innerHTML = `${header}${jogosHtml.join("\n")}${footer}`;
      }

      const embaralharJogos = () => {
         const div = document.getElementById("meu_amor");
         const jogosEmbaralhados = [...jogos].sort(() => Math.random() - 0.5); 
         const header = `<h2>Jogos Embaralhados</h2><table><tr><th>Jogos</th></tr>`;
         const jogosHtml = jogosEmbaralhados.map(item => `<tr><td>${item}</td></tr>`);
         const footer = `</table>`;
         div.innerHTML = `${header}${jogosHtml.join("\n")}${footer}`;
      }

      document.getElementById("linkCarregar").addEventListener("click", (event) => {
         event.preventDefault(); 
         carregarDiv(jogos);
      });
      document.getElementById("linkOrdenar").addEventListener("click", (event) => {
         event.preventDefault(); 
         carregarDivOrdenada();
      });
      document.getElementById("linkEmbaralhar").addEventListener("click", (event) => {
         event.preventDefault(); 
         embaralharJogos();
      });                 
   </script>

</html>
